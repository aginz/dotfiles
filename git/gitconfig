[alias]
  a = add
  ap = add --patch
  b = branch
  c = commit
  ca = commit --amend
  co = checkout
  d = diff
  ds = diff --staged
  f = fetch -p
  p = push
  pl = pull --ff-only
  po = push origin
  r = reset
  s = status
  st = stash -u
  conflicted = !vim +Conflicted
  glog = log -E -i --grep
  l = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
  search = log -S
  tree = log --graph --decorate --oneline --all
