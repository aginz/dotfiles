[user]
  name = 'Ashley Ginsberg'
  email = 'leonarad@gmail.com'

[alias]
  a = add
  ap = add --patch
  b = branch
  c = commit
  ca = commit --amend
  car = commit --amend --no-edit
  co = checkout
  d = diff
  ds = diff --staged
  f = fetch -p
  p = push
  po = push origin
  pl = pull --ff-only
  r = reset
  uncommit = reset --soft HEAD^
  s = status
  st = stash -u
  conflicted = !vim +Conflicted
  glog = log -E -i --grep
  l = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
  search = log -S
  sl = log --graph --decorate --oneline
  sla = log --graph --decorate --oneline --all

[commit]
  template = ~/.gitmessage

[fetch]
  prune = true

[push]
  default = upstream
