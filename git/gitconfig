  name = Ashley Ginsberg
  email = leonarad@gmail.com
  username = aginz

[alias]
  a = add
  aa = add --all
  ap = add --patch
  b = branch
  c = commit
  cm = commit -m
  ca = commit --amend
  can = commit --amend --no-edit
  co = checkout
  d = diff
  ds = diff --staged
  f = fetch -p
  p = push
  po = push origin
  pl = pull --ff-only
  r = reset
  uncommit = reset --soft HEAD^
  s = status
  st = stash
  conflicted = !vim +Conflicted
  glog = log -E -i --grep
  l = log --pretty=format:'%C(yellow)%h%C(reset) - %an [%C(green)%ar%C(reset)] %s'
  search = log -S
  sl = log --graph --decorate --oneline
  sla = log --graph --decorate --oneline --all

[commit]
  template = ~/.gitmessage

[fetch]
  prune = true

[merge]
  ff = only

[push]
  default = upstream

[includeIf "gitdir:~/work/"]
  path = .gitconfig.work
